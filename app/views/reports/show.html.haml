%h1= "Report ##{@report.id}"
%p= @report.created_at.strftime("%D")
%td.col-sm-4= link_to "Download as CSV", "/reports/#{@report.id}.csv", class: "btn btn-info"


%table.table.m-t-2
  %thead
    %tr
      %th YouTube ID
      %th Views
      %th Channel Subscribers

      %th Video Title
  %tbody
    - @report.stats.each do |stat|
      %tr
        %td= stat.video.youtube_id
        %td= stat.views
        %td= stat.channel_subscribers
        %td= stat.video.title
